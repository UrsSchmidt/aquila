#!/usr/local/bin/aq

binaux := \a, b, c, d ->
    if b = 0: c / d
    elif a = 0: 0
    else: binaux(a - 1, b - 1, c * a, d * b);
bin := \a, b ->
    if a < 0 or b < 0: error('Illegal argument')
    else: binaux(a, b, 1, 1);

lcm := \a, b ->
    if a < 0 or b < 0: error('Illegal argument')
    elif a = 0 and b = 0: 0
    else: |a * b| / gcd(a, b);
