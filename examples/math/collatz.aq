#!/usr/local/bin/aq

collatz := \n : Integer ->
    If n = 1:
        1
    ElseIf n > 1 and n mod 2 = 0:
        collatz(n / 2)
    ElseIf n > 1 and n mod 2 = 1:
        collatz(3 * n + 1)
    Else:
        error('Illegal argument')
    EndIf;

For i From 1 To 10:
    Write 'collatz(' & IntToStr(i) & ') = ' & IntToStr(collatz(i));
EndFor
