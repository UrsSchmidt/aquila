#!/usr/local/bin/aq

# there is also the n! operator available
# this file only serves as an examples as to how to implement it on your own

factorial := \n : Integer ->
    if n < 1:
        error('Illegal argument')
    elif n = 1:
        1
    else:
        n * factorial(n - 1);

for n from 1 to 10 (
    write int2str(n) & '! = ' & int2str(factorial(n));
)
