#!/usr/local/bin/aq

n := 99;

f := \n : Integer ->
    If n = 0: 'No more' Else: int2str(n) EndIf & ' bottle' & If n <> 1: 's' Else: '' EndIf & ' of beer';

s := f(n);
For i From n To 1 Step -1:
    Write s & ' on the wall,';
    Write s & '.';
    s := f(i - 1);
    Write 'Take one down, pass it around,';
    Write s & ' on the wall.';
EndFor
