#!/usr/local/bin/aq

n := 99;

f := \n : Integer ->
    (if n = 0 ('No more') else (int2str(n))) & ' bottle' & (if n <> 1 ('s') else ('')) & ' of beer';

s := f(n);
for i from n to 1 step -1 (
    write s & ' on the wall,';
    write s & '.';
    s := f(i - 1);
    write 'Take one down, pass it around,';
    write s & ' on the wall.';
)
