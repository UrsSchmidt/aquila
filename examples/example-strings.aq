#!/usr/local/bin/aq

run '../prelude/stringfunctions.aq';

str := 'HeLlO, WoRlD!';

write 'strreverse:  ' & strreverse(str);
write 'tolowercase: ' & tolowercase(str);
write 'touppercase: ' & touppercase(str);

write '0: ' & int2str(findleft(str, 'He', 0));
write '3: ' & int2str(findleft(str, 'lO', 0));
write '0: ' & int2str(findright(str, 'He', length(str)));
write '3: ' & int2str(findright(str, 'lO', length(str)));
